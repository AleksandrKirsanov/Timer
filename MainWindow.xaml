<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" >
    <Window.Resources>
        <Style TargetType="RadioButton" >
            <Setter Property="Margin" Value="10" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <StackPanel Margin="15,20" >
                <RadioButton  Content="Выключение по установленному времени" GroupName="Radio1" IsChecked="True"  VerticalContentAlignment="Center"/>
                <RadioButton  Content="Выключение по установленному интервалу" GroupName="Radio1" VerticalContentAlignment="Center" />
                <RadioButton  Content="Сон по установленному времени" GroupName="Radio1" VerticalContentAlignment="Center" />
                <RadioButton  Content="Сон по установленному интервалу" GroupName="Radio2" VerticalContentAlignment="Center" />
                <RadioButton  Content="Сигнал по установленному времени" GroupName="Radio2" VerticalContentAlignment="Center" />
                <RadioButton  Content="Сигнал по установленному интервалу" GroupName="Radio3" VerticalContentAlignment="Center" />



            </StackPanel>
        </Grid>
        <Label Content="Системное время" Grid.Column="1" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
